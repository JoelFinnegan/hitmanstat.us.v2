@{
    var description = "HITMAN status website provides the current status and incident reporting for HITMAN online services.";
    var appName = "HITMAN Status";
    var themeColor = "#c80000";
    var vTag = "v=2020110103";
}

@* Basic *@
<meta name="description" content="@description" />
<meta name="keywords" content="hitman, online, services, status, down, up, state, server, servers, incident, reporting" />
<meta name="theme-color" content="@themeColor">

@* Favicons *@
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?@vTag">
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?@vTag">
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?@vTag">
<link rel="manifest" href="/manifest.json?@vTag">
<link rel="mask-icon" href="/safari-pinned-tab.svg?@vTag" color="@themeColor">
<link rel="shortcut icon" href="/favicon.ico?@vTag">

@* Open Graph *@
<meta property="og:image:width" content="279">
<meta property="og:image:height" content="279">
<meta property="og:type" content="website" />
<meta property="og:title" content="@appName">
<meta property="og:description" content="@description">
<meta property="og:url" content="https://hitmanstat.us">
<meta property="og:image" content="https://hitmanstat.us/og-image.jpg?@vTag">

@* Mobile *@
<meta name="apple-mobile-web-app-title" content="@appName" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="mobile-web-app-capable" content="yes" />
<meta name="application-name" content="@appName">
<meta name="msapplication-TileColor" content="@themeColor">